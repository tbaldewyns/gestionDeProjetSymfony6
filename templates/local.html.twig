{% extends 'base.html.twig' %}

{% block stylesheets %}
<link href="{{ asset('css/local.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
<div class="container">
    <center>
        <div class="colorBox">
            <div class="localBorder">
                {% if lastData.value < 600 %}
                <div class="green">
                {% elseif lastData.value < 900  %}
                <div class="orange">
                {% else %}
                <div class="red">  
                {% endif %}
                    <div class="date">
                        {{lastData.sendedAt |date('d-m-Y G:i')}}
                    </div>
                    <div class="value">
                        {{lastData.value}} ppm
                    </div>
                    <div class="local">
                        local {{lastData.local}}
                    </div>
                    {% if interval.i > 6 or interval.h >= 1 or interval.d >= 1 or interval.m >= 1 %}
                        <div class="diffDate" id="whiteText">
                            <p>La dernière mesure à été prise il y a :</p>
                            <p>
                                {% if interval.m > 0 %}
                                {{interval.m}} mois,
                                {% endif %}
                                {% if interval.d > 0%}
                                {{interval.d}} jour(s),
                                {% endif %}
                                {% if interval.h >0 %}
                                {{interval.h}} heure(s),
                                {% endif %}
                                {{interval.i}} minute(s) et {{interval.s}}
                                seconde(s) </p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="loginBtn">
            <a href="{{path('login')}}">Se connecter</a>
        </div>
    </center>
</div>
{% endblock %}
