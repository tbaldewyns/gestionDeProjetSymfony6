{% extends 'base.html.twig' %}

{% block stylesheets %}
<link href="{{ asset('css/security/login.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}

<div class="container">
    <center>
        
        <div class="editCard">
            <div class="formTitle" id="editUserForm">
                Informations personnelles
            </div>
            <div class="editForm">
                {% for message in app.flashes("success") %}
                <div class="message">
                    {{ message }}
                </div>
                {% endfor %}
                {{form_start(infosForm)}}
                <div class="names">
                    {{form_row(infosForm.firstName, {'attr':{'placeholder':'Pr√©nom'}})}}
                    {{form_row(infosForm.lastName, {'attr':{'placeholder':'Nom de famille'}})}}
                </div>
                <hr>
                <div class="email">
                    {{form_row(infosForm.email, {'attr':{'placeholder':'Adresse email'}})}}
                </div>
                <hr>
                <div class="btn">
                    <button type="submit" class="editBtn"><span>Editer</span></button>
                </div>
                {{form_end(infosForm)}}
                {{form_start(passwordsForm)}}

                <div class="passwords">
                    {{form_row(passwordsForm.password, {'attr':{'placeholder':'Mot de passe'}})}}
                    {{form_row(passwordsForm.confirmPassword, {'attr':{'placeholder':'Confirmer votre mot de passe'}})}}
                </div>
                <hr>
                <div class="btn">
                    <button type="submit" class="editBtn"><span>Editer</span></button>
                </div>
                {{form_end(passwordsForm)}}
            </div>
        </div>
    </center>
</div>
{% endblock %}